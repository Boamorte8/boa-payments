{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": ["src/**/__tests__/*", "src/tests/*", "src/router/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@stores": ["./src/stores/*"],
      "@pages": ["./src/pages/*"],
      "@app/*": ["./src/app/*"],
      "@atoms/*": ["./src/atoms/*"],
      "@molecules/*": ["./src/molecules/*"],
      "@organisms/*": ["./src/organisms/*"],
      "@templates/*": ["./src/templates/*"],
    },
    "types": ["node", "jsdom"]
  }
}
